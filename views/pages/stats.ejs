<div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-4">URL Statistics</h2>
    <p>Original URL: <a href="<%= url.longUrl %>" target="_blank" class="text-blue-600"><%= url.longUrl %></a></p>
    <p>Shortened URL: <a href="/<%= url.shortCode %>" class="text-blue-600">http://localhost:5000/<%= url.shortCode %></a></p>
    <p>Total Clicks: <%= url.clicks %></p>

    <h3 class="text-xl font-bold mt-6">Click History</h3>
    <ul>
        <% clicks.forEach(function(click) { %>
            <li>Clicked at: <%= click.clickedAt %> from IP: <%= click.ip %></li>
        <% }); %>
    </ul>
</div>
